services:
  vaultwarden:
    image: vaultwarden/server:latest
    container_name: vaultwarden
    restart: unless-stopped
    environment:
      DOMAIN: "https://warden.private.salami.network"
      DATABASE_URL: "postgresql://postgres:postgres@postgres/vaultwarden"
      SIGNUPS_ALLOWED: "false"
    volumes:
      - ./vw-data/:/data/
    ports:
      - 8080:80
